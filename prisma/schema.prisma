// Fichier : prisma/schema.prisma

datasource db {
  provider = "postgresql"
  // L'URL de connexion complète de Neon doit être mise dans un fichier .env sous le nom DATABASE_URL
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Intervenant {
  id                      Int      @id @default(autoincrement())
  Nom_Complet             String   @db.Text
  Genre                   String?  @db.VarChar(10)
  Filiere                 String?  @db.VarChar(10)
  Promo                   Int?
  Est_Pole                Boolean?
  Email                   String?  @db.Text
  Telephone               String?  @db.Text
  Nb_Activites            Int?
  Nb_Activites_Passees    Int?
  Nb_Activites_Futures    Int?
  Retribution_Totale      Float?  
  Centres_Interets        String?  @db.Text
  Competences             String?  @db.Text

  @@map("intervenants")
}
